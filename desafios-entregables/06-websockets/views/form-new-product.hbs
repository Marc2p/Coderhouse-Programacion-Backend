<header>
  <h1 style="color:blue;">Productos</h1>
</header>
<main>
  <div class="container mt-3">
    <div class="jumbotron">
      <h2 style="color:blue;">Nuevo producto</h2>
      <br />
      <form onsubmit="return addProduct(this)">
        <div class="form-group">
          <label for="title"><b>Nombre</b></label>
          <input id="title" class="form-control" type="text" name="title" required />
        </div>
        <div class="form-group">
          <label for="price"><b>Precio</b></label>
          <input
            id="price"
            class="form-control"
            type="number"
            name="price"
            min="1"
            step="0.01" required
          />
        </div>
        <div class="form-group">
          <label for="thumbnail"><b>Url de imagen</b></label>
          <input
            id="thumbnail"
            class="form-control"
            type="url"
            name="thumbnail" required
          />
        </div>
        <button class="btn btn-success mt-3 mb-5">Enviar</button>
      </form>
    </div>
  </div>
</main>
<aside>
  <div id="productos">
    <h3>Lista de productos</h3>
    <div class="table-responsive">
      <table class="table table-dark" id="tableOfProducts">
        <thead><tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Thumbnail</th> </tr></thead>
        <tbody id="tbproducts"></tbody>
      </table>
    </div>
  </div>
</aside>
<footer>
  <a href="/productos">Ver lista de productos</a>
</footer>
<script src="/js/main.js"></script>